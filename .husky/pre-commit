#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run lint-staged
npx lint-staged

# Run type checking
echo "ğŸ” Type checking..."
npm run type-check || exit 1

# Run tests with coverage
echo "ğŸ§ª Running tests with coverage..."
npm run test:coverage || exit 1

# Check if coverage meets threshold (using Node.js)
echo "ğŸ“Š Checking coverage threshold..."
node -e "
const fs = require('fs');
const path = './coverage/coverage-summary.json';
if (fs.existsSync(path)) {
  const data = JSON.parse(fs.readFileSync(path, 'utf8'));
  const coverage = data.total.lines.pct;
  const threshold = 80;
  if (coverage < threshold) {
    console.error(\`âŒ Code coverage (\${coverage}%) is below threshold (\${threshold}%)\`);
    process.exit(1);
  } else {
    console.log(\`âœ… Code coverage (\${coverage}%) meets threshold (\${threshold}%)\`);
  }
} else {
  console.log('âš ï¸  Coverage file not found, skipping coverage check');
}
" || exit 1

echo "âœ… All pre-commit checks passed!"
